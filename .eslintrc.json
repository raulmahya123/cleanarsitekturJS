{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "bracketSpacing": true
      }
    ],
    "eqeqeq": "warn",
    "no-async-promise-executor": "off",
    "no-console": "error",
    "no-var": "error"
  }
}
